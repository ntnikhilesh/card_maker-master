<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.mdemo.fregment.BirthdayDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:id="@+id/birthday_detail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BIRTHDAY DETAIL"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="@color/text_color"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

                <EditText
                    android:id="@+id/et_bithday_boy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Birthday Boy/Girl (Max 20 characters)"
                    android:inputType="text"
                    android:maxLines="1"
                    android:maxLength="20"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/et_partner_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Your_Name (Max 20 characters)"
                    android:inputType="text"
                    android:maxLines="1"
                    android:maxLength="20"/>

            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/tv_date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/et_birthday_wish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/birthday_msg"
                    android:hint="Wedding Message (Max 100 characters)"

                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:maxLength="100"
                    />

            </android.support.design.widget.TextInputLayout>



            <Button
                android:id="@+id/button_next_on_birthday_detail_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next"
                android:layout_marginTop="40dp"
                android:textColor="@color/et_background"
                android:textSize="15sp"
                android:background="@color/text_color"
                />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
